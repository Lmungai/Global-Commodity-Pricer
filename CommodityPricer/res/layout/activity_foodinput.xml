<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="5dip"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/lblCommodityUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Unit" />

    <Spinner
        android:id="@+id/spFoodCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblCommodityUnit"
        android:layout_marginBottom="10dip" />

    <TextView
        android:id="@+id/lblFoodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/spFoodCategories"
        android:text="Name of Food Item" />

    <EditText
        android:id="@+id/eTextFoodName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lblFoodName"
        android:layout_marginBottom="10dip"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/lblQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/eTextFoodName"
        android:text="Quantity" />

    <EditText
        android:id="@+id/eTextQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lblQuantity"
        android:layout_marginBottom="10dip"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/lblPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/eTextQuantity"
        android:text="Price" />

    <EditText
        android:id="@+id/eTextPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lblPrice"
        android:layout_marginBottom="10dip"
        android:ems="10"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onSubmitButtonClicked"
        android:layout_below="@+id/eTextPrice"
        android:layout_centerHorizontal="true"
        android:text="Submit" />

</RelativeLayout>